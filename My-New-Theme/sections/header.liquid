{{ 'header.css' | asset_url | stylesheet_tag }}

<header class="site-header">
  <div class="container">
    <!-- Logo -->
    <div class="logo">
      {% if section.settings.logo != blank %}
        <a href="{{ routes.root_url }}">
          <img src="{{ section.settings.logo | image_url: width:150 }}" alt="{{ shop.name }}" width="150" height="auto">
        </a>
      {% else %}
        <a href="{{ routes.root_url }}" class="atag">{{ shop.name }}</a>
      {% endif %}
    </div>

    <!-- Hamburger Icon (for mobile) -->
    <div class="menu-toggle" id="menu-toggle">â˜°</div>

    <!-- Navigation Menu -->
    <nav class="main-nav" id="main-nav">
      <ul>
        {% for link in linklists['main-menu'].links %}
          <li>
            <a href="{{ link.url }}" class="atag">{{ link.title }}</a>
          </li>
        {% endfor %}
      </ul>
    </nav>

    <!-- Cart -->
    <div class="cart">
      <a href="{{ routes.cart_url }}" class="atag"
        >ðŸ›’<sup>{{ cart.item_count }}</sup></a
      >
    </div>
  </div>
</header>

<script>
  document.addEventListener('DOMContentLoaded', () => {
    const toggle = document.getElementById('menu-toggle');
    const nav = document.getElementById('main-nav');

    toggle.addEventListener('click', () => {
      nav.classList.toggle('active');
    });
  });
</script>

{% schema %}
{
  "name": "header",
  "settings": [
    {
      "type": "image_picker",
      "id": "logo",
      "label": "Logo"
    },
    {
      "type": "link_list",
      "id": "menu",
      "label": "Menu",
      "default": "main-menu"
    }
  ]
}
{% endschema %}
