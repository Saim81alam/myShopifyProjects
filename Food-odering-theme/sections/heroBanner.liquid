{{ 'heroBanner.css' | asset_url | stylesheet_tag }}

<section class="hero-banner" id="Section-{{ section.id }}">
  <div class="hero-banner__image-side">
    {%- if section.settings.image != blank -%}
      {{
        section.settings.image
        | image_url: width: 1500
        | image_tag: class: 'hero-banner__image', loading: 'eager', alt: section.settings.image.alt
      }}
    {%- else -%}
    {%- endif -%}
  </div>

  <div class="hero-banner__content-side">
    {%- if section.settings.heading != blank -%}
      <h1 class="hero-banner__heading">{{ section.settings.heading | escape }}</h1>
    {%- endif -%}

    {%- if section.settings.subtext != blank -%}
      <p class="hero-banner__subtext">{{ section.settings.subtext | escape }}</p>
    {%- endif -%}

    {%- if section.settings.button_label != blank -%}
      <a href="{{ section.settings.button_link }}" class="hero-banner__button">
        {{ section.settings.button_label | escape }}
      </a>
    {%- endif -%}
  </div>
</section>

{% schema %}
{
  "name": "Hero Banner Split",
  "tag": "section",
  "class": "section-hero-banner",
  "settings": [
    {
      "type": "image_picker",
      "id": "image",
      "label": "Left Side Image"
    },
    {
      "type": "text",
      "id": "heading",
      "default": "TASTE THE JOY",
      "label": "Heading Text"
    },
    {
      "type": "text",
      "id": "subtext",
      "default": "Fresh, Delicious Meals Delivered to Your Door",
      "label": "Subtext"
    },
    {
      "type": "text",
      "id": "button_label",
      "default": "ORDER NOW",
      "label": "Button Label"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Button Link"
    }
  ],
  "presets": [
    {
      "name": "Split Hero Banner",
      "category": "Image"
    }
  ]
}
{% endschema %}
