<header class="site-header">
  <div class="container">
    <!-- Logo -->
    <div class="logo">
      {% if section.settings.logo != blank %}
        <a href="{{ routes.root_url }}">
          <img src="{{ section.settings.logo | image_url: width:150 }}" alt="{{ shop.name }}" width="150" height="auto">
        </a>
      {% else %}
        <a href="{{ routes.root_url }}" class="atag">{{ shop.name }}</a>
      {% endif %}
    </div>

    <!-- Hamburger Icon -->
    <div class="menu-toggle" id="menu-toggle">â˜°</div>

    <!-- Navigation + Cart Wrapper -->
    <div class="nav-wrapper" id="nav-wrapper">
      <nav class="main-nav">
        <ul>
          {% for link in linklists['main-menu'].links %}
            <li>
              <a href="{{ link.url }}" class="atag">{{ link.title }}</a>
            </li>
          {% endfor %}
        </ul>
      </nav>

      <!-- Cart -->
      <div class="cart">
        <a href="{{ routes.cart_url }}" class="atag"
          >ðŸ›’<sup>{{ cart.item_count }}</sup></a
        >
      </div>
    </div>
  </div>
</header>

<script>
  document.addEventListener('DOMContentLoaded', () => {
    const toggle = document.getElementById('menu-toggle');
    const navWrapper = document.getElementById('nav-wrapper');

    toggle.addEventListener('click', () => {
      navWrapper.classList.toggle('active');
    });
  });
</script>

{% schema %} { "name": "Header", "settings": [ { "type": "image_picker", "id": "logo", "label": "Logo" }, { "type": "link_list", "id": "menu", "label": "Navigation Menu", "default": "main-menu" } ] } {% endschema %}
